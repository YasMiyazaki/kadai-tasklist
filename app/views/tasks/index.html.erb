<% if logged_in? %>

  <h1>タスクリスト</h1>
  
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thread>
        <tr>
          <th>id</th>
          <th>ステータス</th>
          <th>タスク</th>
        </tr>
      </thread>
      
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  
  <% end %>
  
<%= link_to "新規タスクの登録" , new_task_path, class: "btn btn-primary" %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>